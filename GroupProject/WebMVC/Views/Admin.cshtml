<body>
    @Html.Partial("~/Views/AdminHeader.cshtml")
    <div class="container" style="padding-top: 50px;">
        <div class="center">
            @using (Html.BeginForm("Search", "Bag", FormMethod.Get))
            {
                <span> ID: </span> @Html.EditorFor(model => model.ID)
                <span> Name: </span> @Html.EditorFor(model => model.Name)
                <span> Category: </span>
                @Html.DropDownListFor(model => model.Category, new SelectList(GlobalVariables.Categories, "bagCID", "CateName"), "--Category--")
                <input type="submit" value="Search"/>
            }
        </div>
    </div>
    <div class="container" style="margin-top: 50px;">
        @if (ViewBag.Bags != null)
        {
            <div class="center">
                <table border="1" class="table table-bordered" style="width: 1000px; margin-right: 50px; height: 400px;">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Image</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Bag bag in ViewBag.Bags)
                        {
                            <tr>
                                <td>@bag.BagID</td>
                                <td>@bag.BagName</td>
                                <td>
                                    <img alt="Food Image" src="@Url.Content(bag.Image)" width="100px" height="100px" />
                                </td>
                                <td>@bag.Price</td>
                                <td>@bag.Quantity</td>
                                <td>
                                    <div class="center">
                                        <a onclick="Delete('@bag.BagID')" class="btn btn-large btn-primary">Delete</a>
                                    </div>
                                    
                                </td>
                                <td>
                                    <div class="center">
                                        @Html.ActionLink("Edit", "Edit", "Bag", new { BagID = bag.BagID }, new { @class = "btn", @style = "background-color: #000" })
                                    </div>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
